<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- solid表示远的填充色 -->
    <solid android:color="@color/blue" />
    <!-- stroke则代表远的边框线 -->
    <stroke
        android:width="6dp"
        android:color="@color/white" />
    <!-- size控制高宽 -->
    <size
        android:height="18dp"
        android:width="18dp" />
</shape>
