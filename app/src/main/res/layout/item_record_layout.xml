<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/white"
       android:padding="@dimen/normal_padding">

      <ImageView
          android:id="@+id/record_iv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:src="@drawable/weather_hail"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/normal_margin"
          android:layout_toRightOf="@id/record_iv"
          android:orientation="vertical">

         <TextView
             android:id="@+id/run_date_tv"
             style="@style/txt_gray_small_style"
             android:textSize="@dimen/x_small_txt_size"
             tools:text="21日晚上"/>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

            <TextView
                android:id="@+id/distance_tv"
                style="@style/txt_gray_small_style"
                android:textSize="40sp"
                tools:text="5.08"/>

            <TextView
                style="@style/txt_gray_small_style"
                android:textSize="@dimen/large_txt_size"
                android:layout_toRightOf="@id/distance_tv"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_alignBaseline="@id/distance_tv"
                tools:text="公里"/>

         </RelativeLayout>

         <TextView
             android:id="@+id/run_time_tv"
             style="@style/txt_gray_small_style"
             tools:text="00:34:07"/>

      </LinearLayout>

   </RelativeLayout>




</layout>